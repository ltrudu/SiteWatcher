<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:clipToOutline="true"
    android:clipChildren="true"
    app:cardBackgroundColor="?attr/colorSurface"
    app:cardElevation="0dp"
    app:cardCornerRadius="12dp"
    app:strokeWidth="1dp"
    app:strokeColor="?attr/colorOutline">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Dialog Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_feedback_action"
            android:textAppearance="?attr/textAppearanceTitleLarge"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="16dp" />

        <!-- Feedback Type Spinner -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/feedback_type"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnSurface" />

        <Spinner
            android:id="@+id/spinnerFeedbackType"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/spinner_background"
            android:padding="8dp" />

        <!-- Label Input (always visible) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/labelInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/feedback_label"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/labelEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="1"
                android:imeOptions="actionNext"
                tools:text="Notify me when changed" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Email Input (visibility toggled based on type) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/emailInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/email_address"
            android:visibility="gone"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/ic_contacts"
            app:endIconContentDescription="@string/pick_contact"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            tools:visibility="visible">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/emailEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:imeOptions="actionDone"
                tools:text="user@example.com" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Phone Input (visibility toggled based on type) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/phoneInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/phone_number"
            android:visibility="gone"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/ic_contacts"
            app:endIconContentDescription="@string/pick_contact"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            tools:visibility="visible">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/phoneEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:maxLines="1"
                android:imeOptions="actionDone"
                tools:text="+1 555-123-4567" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Sound Selection Input (visibility toggled based on type) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/soundInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/notification_sound"
            android:visibility="gone"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/ic_music_note"
            app:endIconContentDescription="@string/select_sound"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            tools:visibility="visible">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/soundEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:focusable="false"
                android:clickable="false"
                tools:text="Default Notification" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Duration Section (visibility toggled based on type) -->
        <LinearLayout
            android:id="@+id/durationSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alarm_duration"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurface" />

            <!-- Minutes Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/alarm_minutes"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:minWidth="64dp" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderAlarmMinutes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:valueFrom="0"
                    android:valueTo="60"
                    android:stepSize="1"
                    android:value="0"
                    app:labelBehavior="floating" />

                <TextView
                    android:id="@+id/textAlarmMinutesValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:minWidth="32dp"
                    android:gravity="end"
                    tools:text="0" />

            </LinearLayout>

            <!-- Seconds Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/alarm_seconds"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:minWidth="64dp" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderAlarmSeconds"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:valueFrom="0"
                    android:valueTo="59"
                    android:stepSize="1"
                    android:value="10"
                    app:labelBehavior="floating" />

                <TextView
                    android:id="@+id/textAlarmSecondsValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:minWidth="32dp"
                    android:gravity="end"
                    tools:text="10" />

            </LinearLayout>

            <!-- Indefinite Warning -->
            <TextView
                android:id="@+id/textAlarmIndefiniteWarning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/alarm_indefinite_warning"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="?attr/colorError"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

        <!-- Vibration Section (visibility toggled based on type) -->
        <LinearLayout
            android:id="@+id/vibrationSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vibration_pattern"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurface" />

            <Spinner
                android:id="@+id/spinnerVibrationPattern"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/spinner_background"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Flash Section (visibility toggled based on type) -->
        <LinearLayout
            android:id="@+id/flashSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/flash_speed"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurface" />

            <com.google.android.material.slider.Slider
                android:id="@+id/sliderFlashDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:valueFrom="50"
                android:valueTo="1000"
                android:stepSize="50"
                android:value="200"
                app:labelBehavior="floating" />

            <TextView
                android:id="@+id/textFlashDurationValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="200 ms" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonCancel"
                style="@style/Widget.SiteWatcher.Button.Cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@string/cancel" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonSave"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
