<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:clipToOutline="true"
    android:clipChildren="true"
    app:cardBackgroundColor="?attr/colorSurface"
    app:cardElevation="0dp"
    app:cardCornerRadius="12dp"
    app:strokeWidth="1dp"
    app:strokeColor="?attr/colorOutline">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Schedule Type Spinner -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/schedule_type"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurface" />

            <Spinner
                android:id="@+id/spinnerScheduleType"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/spinner_background"
                android:padding="8dp" />

            <!-- Check Interval Section (Common) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/check_interval"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurface" />

            <Spinner
                android:id="@+id/spinnerIntervalType"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/spinner_background"
                android:padding="8dp" />

            <!-- Periodic Interval Section -->
            <LinearLayout
                android:id="@+id/periodicSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/interval"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:id="@+id/intervalValueLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorPrimary"
                        tools:text="60 minutes" />

                </LinearLayout>

                <com.google.android.material.slider.Slider
                    android:id="@+id/intervalSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="15"
                    android:valueTo="600"
                    android:stepSize="15"
                    android:value="60" />

            </LinearLayout>

            <!-- Specific Time Section -->
            <LinearLayout
                android:id="@+id/specificTimeSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/time"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurface" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/timePickerButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    tools:text="09:00" />

            </LinearLayout>

            <!-- Live Tracking Section -->
            <LinearLayout
                android:id="@+id/liveTrackingSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Minutes Slider -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/live_tracking_minutes"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:id="@+id/liveTrackingMinutesLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorPrimary"
                        tools:text="0 min" />

                </LinearLayout>

                <com.google.android.material.slider.Slider
                    android:id="@+id/liveTrackingMinutesSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="0"
                    android:valueTo="15"
                    android:stepSize="1"
                    android:value="0" />

                <!-- Seconds Slider -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/live_tracking_seconds"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:id="@+id/liveTrackingSecondsLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorPrimary"
                        tools:text="30 sec" />

                </LinearLayout>

                <com.google.android.material.slider.Slider
                    android:id="@+id/liveTrackingSecondsSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="1"
                    android:valueTo="60"
                    android:stepSize="1"
                    android:value="30" />

                <!-- Total interval summary -->
                <TextView
                    android:id="@+id/liveTrackingTotalLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    tools:text="Total interval: 30 seconds" />

            </LinearLayout>

            <!-- SELECTED_DAY: Date Picker -->
            <LinearLayout
                android:id="@+id/selectedDaySection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/date"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurface" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/datePickerButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    tools:text="Jan 15, 2026" />

            </LinearLayout>

            <!-- DATE_RANGE: From/To Date Pickers -->
            <LinearLayout
                android:id="@+id/dateRangeSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/from_date"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnSurface" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/fromDatePickerButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        tools:text="Jan 1, 2026" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/to_date"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnSurface" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/toDatePickerButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        tools:text="Mar 31, 2026" />

                </LinearLayout>

            </LinearLayout>

            <!-- EVERY_WEEKS: Days Selection + Week Parity -->
            <LinearLayout
                android:id="@+id/everyWeeksSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Days of Week -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/days_to_check"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurface" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ToggleButton
                        android:id="@+id/toggleSunday"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="2dp"
                        android:textOn="@string/day_sun"
                        android:textOff="@string/day_sun"
                        android:checked="true"
                        android:background="@drawable/toggle_day_background"
                        android:textColor="@drawable/toggle_day_text_color"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:padding="0dp"
                        android:textSize="12sp" />

                    <ToggleButton
                        android:id="@+id/toggleMonday"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="2dp"
                        android:textOn="@string/day_mon"
                        android:textOff="@string/day_mon"
                        android:checked="true"
                        android:background="@drawable/toggle_day_background"
                        android:textColor="@drawable/toggle_day_text_color"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:padding="0dp"
                        android:textSize="12sp" />

                    <ToggleButton
                        android:id="@+id/toggleTuesday"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="2dp"
                        android:textOn="@string/day_tue"
                        android:textOff="@string/day_tue"
                        android:checked="true"
                        android:background="@drawable/toggle_day_background"
                        android:textColor="@drawable/toggle_day_text_color"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:padding="0dp"
                        android:textSize="12sp" />

                    <ToggleButton
                        android:id="@+id/toggleWednesday"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="2dp"
                        android:textOn="@string/day_wed"
                        android:textOff="@string/day_wed"
                        android:checked="true"
                        android:background="@drawable/toggle_day_background"
                        android:textColor="@drawable/toggle_day_text_color"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:padding="0dp"
                        android:textSize="12sp" />

                    <ToggleButton
                        android:id="@+id/toggleThursday"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="2dp"
                        android:textOn="@string/day_thu"
                        android:textOff="@string/day_thu"
                        android:checked="true"
                        android:background="@drawable/toggle_day_background"
                        android:textColor="@drawable/toggle_day_text_color"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:padding="0dp"
                        android:textSize="12sp" />

                    <ToggleButton
                        android:id="@+id/toggleFriday"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="2dp"
                        android:textOn="@string/day_fri"
                        android:textOff="@string/day_fri"
                        android:checked="true"
                        android:background="@drawable/toggle_day_background"
                        android:textColor="@drawable/toggle_day_text_color"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:padding="0dp"
                        android:textSize="12sp" />

                    <ToggleButton
                        android:id="@+id/toggleSaturday"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        android:textOn="@string/day_sat"
                        android:textOff="@string/day_sat"
                        android:checked="true"
                        android:background="@drawable/toggle_day_background"
                        android:textColor="@drawable/toggle_day_text_color"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:padding="0dp"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- Week Parity -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/week_parity"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurface" />

                <Spinner
                    android:id="@+id/spinnerWeekParity"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/spinner_background"
                    android:padding="8dp" />

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:gravity="end">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="@string/cancel"
                    style="@style/Widget.MaterialComponents.Button.TextButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</com.google.android.material.card.MaterialCardView>
