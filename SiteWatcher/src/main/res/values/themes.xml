<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ═══════════════════════════════════════════════════════════════════════
         Base Theme (shared dark background and structure)
         ═══════════════════════════════════════════════════════════════════════ -->

    <style name="Base.Theme.SiteWatcher" parent="Theme.Material3.Dark.NoActionBar">

        <!-- Background & Surface (shared) -->
        <item name="android:colorBackground">@color/sw_background</item>
        <item name="colorOnBackground">@color/sw_on_background</item>
        <item name="colorSurface">@color/sw_surface</item>
        <item name="colorOnSurface">@color/sw_on_surface</item>
        <item name="colorSurfaceVariant">@color/sw_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/sw_on_surface_variant</item>

        <!-- Outline Colors (shared) -->
        <item name="colorOutline">@color/sw_outline</item>
        <item name="colorOutlineVariant">@color/sw_outline_variant</item>

        <!-- Error Colors (shared) -->
        <item name="colorError">@color/sw_error</item>
        <item name="colorOnError">@color/sw_on_error</item>
        <item name="colorErrorContainer">@color/sw_error_container</item>
        <item name="colorOnErrorContainer">@color/sw_on_error_container</item>

        <!-- Status Bar and Navigation Bar -->
        <item name="android:statusBarColor">@color/sw_background</item>
        <item name="android:navigationBarColor">@color/sw_nav_bar_background</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>

    </style>

