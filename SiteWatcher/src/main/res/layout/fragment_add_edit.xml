<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.addedit.AddEditFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- URL Input Section -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/urlInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/url"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_public"
                app:endIconContentDescription="@string/browse"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/urlEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textUri"
                    android:maxLines="1"
                    android:imeOptions="actionNext" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Fetch Mode Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/fetch_mode"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurface" />

            <Spinner
                android:id="@+id/fetchModeSpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/spinner_background"
                android:padding="8dp" />

            <TextView
                android:id="@+id/fetchModeHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/fetch_mode_static_desc"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <!-- Auto-Click Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/autoClickSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:cardElevation="0dp"
                app:cardCornerRadius="12dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutline">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/auto_click_actions"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/auto_click_hint"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <!-- Actions Count Label -->
                    <TextView
                        android:id="@+id/actionsCountLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textColor="?attr/colorPrimary"
                        tools:text="3 actions registered" />

                    <!-- Edit Actions Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonEditActions"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/edit_actions"
                        app:icon="@drawable/ic_edit" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Comparison Mode Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/comparison_mode"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurface" />

            <Spinner
                android:id="@+id/comparisonModeSpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/spinner_background"
                android:padding="8dp" />

            <!-- CSS Selector (visible only when CSS_SELECTOR mode selected) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/cssSelectorInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="@string/css_selector"
                android:visibility="gone"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_touch_app"
                app:endIconContentDescription="@string/pick_element"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/cssSelectorEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1"
                    android:imeOptions="actionNext" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Minimum Text Length Section (visible only when TEXT_ONLY mode selected) -->
            <LinearLayout
                android:id="@+id/minTextLengthSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/min_text_length"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:id="@+id/minTextLengthValueLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorPrimary"
                        tools:text="10 chars" />

                </LinearLayout>

                <com.google.android.material.slider.Slider
                    android:id="@+id/minTextLengthSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="3"
                    android:valueTo="150"
                    android:stepSize="1"
                    android:value="10" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/min_text_length_hint"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant" />

            </LinearLayout>

            <!-- Minimum Word Length Section (visible only when TEXT_ONLY mode selected) -->
            <LinearLayout
                android:id="@+id/minWordLengthSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/min_word_length"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:id="@+id/minWordLengthValueLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorPrimary"
                        tools:text="3 chars" />

                </LinearLayout>

                <com.google.android.material.slider.Slider
                    android:id="@+id/minWordLengthSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="1"
                    android:valueTo="8"
                    android:stepSize="1"
                    android:value="3" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/min_word_length_hint"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant" />

            </LinearLayout>

            <!-- Days of Week Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/days_to_check"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurface" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ToggleButton
                    android:id="@+id/toggleSunday"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="2dp"
                    android:textOn="@string/day_sun"
                    android:textOff="@string/day_sun"
                    android:checked="true"
                    android:background="@drawable/toggle_day_background"
                    android:textColor="@drawable/toggle_day_text_color"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:padding="0dp" />

                <ToggleButton
                    android:id="@+id/toggleMonday"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="2dp"
                    android:textOn="@string/day_mon"
                    android:textOff="@string/day_mon"
                    android:checked="true"
                    android:background="@drawable/toggle_day_background"
                    android:textColor="@drawable/toggle_day_text_color"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:padding="0dp" />

                <ToggleButton
                    android:id="@+id/toggleTuesday"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="2dp"
                    android:textOn="@string/day_tue"
                    android:textOff="@string/day_tue"
                    android:checked="true"
                    android:background="@drawable/toggle_day_background"
                    android:textColor="@drawable/toggle_day_text_color"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:padding="0dp" />

                <ToggleButton
                    android:id="@+id/toggleWednesday"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="2dp"
                    android:textOn="@string/day_wed"
                    android:textOff="@string/day_wed"
                    android:checked="true"
                    android:background="@drawable/toggle_day_background"
                    android:textColor="@drawable/toggle_day_text_color"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:padding="0dp" />

                <ToggleButton
                    android:id="@+id/toggleThursday"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="2dp"
                    android:textOn="@string/day_thu"
                    android:textOff="@string/day_thu"
                    android:checked="true"
                    android:background="@drawable/toggle_day_background"
                    android:textColor="@drawable/toggle_day_text_color"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:padding="0dp" />

                <ToggleButton
                    android:id="@+id/toggleFriday"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="2dp"
                    android:textOn="@string/day_fri"
                    android:textOff="@string/day_fri"
                    android:checked="true"
                    android:background="@drawable/toggle_day_background"
                    android:textColor="@drawable/toggle_day_text_color"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:padding="0dp" />

                <ToggleButton
                    android:id="@+id/toggleSaturday"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:textOn="@string/day_sat"
                    android:textOff="@string/day_sat"
                    android:checked="true"
                    android:background="@drawable/toggle_day_background"
                    android:textColor="@drawable/toggle_day_text_color"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:padding="0dp" />

            </LinearLayout>

            <!-- Schedule Type Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/schedule_type"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurface" />

            <Spinner
                android:id="@+id/scheduleTypeSpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/spinner_background"
                android:padding="8dp" />

            <!-- Periodic Interval Section (visible when periodic schedule selected) -->
            <LinearLayout
                android:id="@+id/intervalSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/check_interval"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:id="@+id/intervalValueLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorPrimary"
                        tools:text="60 minutes" />

                </LinearLayout>

                <com.google.android.material.slider.Slider
                    android:id="@+id/intervalSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="15"
                    android:valueTo="600"
                    android:stepSize="15"
                    android:value="60" />

            </LinearLayout>

            <!-- Specific Time Section (visible when specific hour schedule selected) -->
            <LinearLayout
                android:id="@+id/specificTimeSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/specific_time"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurface" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/timePickerButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    tools:text="09:00" />

            </LinearLayout>

            <!-- Threshold Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/threshold"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:id="@+id/thresholdValueLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorPrimary"
                        tools:text="25%" />

                </LinearLayout>

                <com.google.android.material.slider.Slider
                    android:id="@+id/thresholdSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="1"
                    android:valueTo="99"
                    android:stepSize="1"
                    android:value="25" />

            </LinearLayout>

            <!-- Spacer to push buttons to bottom -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:gravity="end">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/cancelButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="@string/cancel"
                    style="@style/Widget.MaterialComponents.Button.TextButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/saveButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add"
                    android:enabled="false" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
