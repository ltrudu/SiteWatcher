<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dataviewer.DataViewerFragment">

    <!-- Content Layout -->
    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                tools:text="Comparison Mode: Full HTML" />

            <TextView
                android:id="@+id/textCaptured"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textAppearance="?attr/textAppearanceBodySmall"
                tools:text="Captured: Dec 28, 2025 10:30 AM" />

            <!-- Excluded elements row -->
            <LinearLayout
                android:id="@+id/excludedElementsRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textExcludedCount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorPrimary"
                    tools:text="3 elements excluded" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnViewExcluded"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/view_excluded_elements"
                    android:textSize="13sp"
                    android:minWidth="0dp"
                    android:paddingHorizontal="12dp" />

            </LinearLayout>

            <!-- Toggle button for switching between rendered and raw view -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnToggleView"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:text="@string/show_source"
                android:textSize="13sp"
                android:minWidth="0dp"
                android:paddingHorizontal="12dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Rendered WebView Container -->
        <FrameLayout
            android:id="@+id/renderedContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone">

            <WebView
                android:id="@+id/webViewRendered"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ProgressBar
                android:id="@+id/webViewLoading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

        </FrameLayout>

        <!-- Raw Data Container -->
        <FrameLayout
            android:id="@+id/rawDataContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/rawDataContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:visibility="gone">

                <CheckBox
                    android:id="@+id/checkWordWrap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/word_wrap"
                    android:checked="false" />

            <!-- No word wrap: horizontal + vertical scrolling -->
            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:fillViewport="true">

                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fillViewport="true">

                    <TextView
                        android:id="@+id/textContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:padding="16dp"
                        android:textIsSelectable="true"
                        android:textSize="12sp"
                        tools:text="&lt;html&gt;\n  &lt;head&gt;\n    &lt;title&gt;Example&lt;/title&gt;\n  &lt;/head&gt;\n&lt;/html&gt;" />

                </ScrollView>

            </HorizontalScrollView>

            <!-- Word wrap: vertical scrolling only -->
            <ScrollView
                android:id="@+id/wrappedScrollView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:fillViewport="true"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textContentWrapped"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:padding="16dp"
                    android:textIsSelectable="true"
                    android:textSize="12sp"
                    tools:text="&lt;html&gt;\n  &lt;head&gt;\n    &lt;title&gt;Example&lt;/title&gt;\n  &lt;/head&gt;\n&lt;/html&gt;" />

            </ScrollView>

            </LinearLayout>

            <!-- Loading indicator for raw data -->
            <ProgressBar
                android:id="@+id/rawDataLoading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="visible" />

        </FrameLayout>

    </LinearLayout>

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/emptyState"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/no_data_available"
            android:textAppearance="?attr/textAppearanceBody1" />

    </LinearLayout>

    <!-- Error Layout -->
    <LinearLayout
        android:id="@+id/errorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/errorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="?attr/textAppearanceBody1"
            tools:text="Error loading data" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/retryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/retry"
            style="@style/Widget.Material3.Button.TonalButton" />

    </LinearLayout>

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/progressLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="visible" />

</FrameLayout>
