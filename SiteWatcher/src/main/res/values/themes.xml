    <!-- ═══════════════════════════════════════════════════════════════════════
         Shared Component Styles
         ═══════════════════════════════════════════════════════════════════════ -->

    <!-- Card View -->
    <style name="Widget.SiteWatcher.CardView" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/sw_card_background</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.SiteWatcher.Card</item>
    </style>

    <style name="Widget.SiteWatcher.CardView.Elevated" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/sw_card_background_elevated</item>
        <item name="cardElevation">4dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.SiteWatcher.Card</item>
    </style>

    <!-- Buttons use theme colors automatically via ?attr/colorPrimary -->
    <style name="Widget.SiteWatcher.Button" parent="Widget.Material3.Button">
        <item name="shapeAppearance">@style/ShapeAppearance.SiteWatcher.Button</item>
    </style>

    <style name="Widget.SiteWatcher.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="shapeAppearance">@style/ShapeAppearance.SiteWatcher.Button</item>
    </style>

    <style name="Widget.SiteWatcher.Button.Tonal" parent="Widget.Material3.Button.TonalButton">
        <item name="shapeAppearance">@style/ShapeAppearance.SiteWatcher.Button</item>
    </style>

    <style name="Widget.SiteWatcher.Button.Text" parent="Widget.Material3.Button.TextButton" />

    <!-- Cancel Button - subtle outline with theme-aware background -->
    <style name="Widget.SiteWatcher.Button.Cancel" parent="Widget.Material3.Button.OutlinedButton">
        <item name="shapeAppearance">@style/ShapeAppearance.SiteWatcher.Button</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="backgroundTint">?attr/colorSurface</item>
        <item name="strokeColor">?attr/colorSecondaryContainer</item>
        <item name="strokeWidth">1dp</item>
        <item name="rippleColor">?attr/colorSecondaryContainer</item>
    </style>

    <!-- Destructive Button - red outline for destructive actions like Clear -->
    <style name="Widget.SiteWatcher.Button.Destructive" parent="Widget.Material3.Button.OutlinedButton">
        <item name="shapeAppearance">@style/ShapeAppearance.SiteWatcher.Button</item>
        <item name="android:textColor">?attr/colorError</item>
        <item name="backgroundTint">?attr/colorSurface</item>
        <item name="strokeColor">?attr/colorError</item>
        <item name="strokeWidth">1dp</item>
        <item name="rippleColor">?attr/colorErrorContainer</item>
    </style>

    <!-- Text Input -->
    <style name="Widget.SiteWatcher.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/sw_on_surface_variant</item>
    </style>

    <style name="Widget.SiteWatcher.TextInputLayout.Dense" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textColorHint">@color/sw_on_surface_variant</item>
    </style>

    <!-- Toolbar -->
    <style name="Widget.SiteWatcher.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/sw_surface</item>
        <item name="titleTextColor">@color/sw_on_surface</item>
    </style>

